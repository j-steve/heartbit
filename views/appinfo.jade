extends layout

block content
	style.
		label input {display:block;}
		
	form.content(method="POST")
		h3= "App Info"
		label="Client ID"
			input(name="clientId", value=clientId)
		label="Consumer Key"
			input(name="consumerKey", value=consumerKey)
		label="Consumer Secret"
			input(name="consumerSecret", value=consumerSecret)
		label="Callback URL"
			input(value="http://heart-bit.herokuapp.com/auth", disabled=true)
		input(type="submit", value="Submit")
				